<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.xiaocheng.SQLite.SQLiteActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.71" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
               <TextView
                   android:id="@+id/SQLiteQuery"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/SQLiteQuery"
                   android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <Button
        android:id="@+id/sqliteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sqliteBtn" />
        
        <Button
        android:id="@+id/sqliteBtnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sqliteBtnAdd" />

        <Button
            android:id="@+id/sqliteBtnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sqliteBtnDelete" />
        
    </LinearLayout>

</LinearLayout>